<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans     http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    
   <!-- Definition For Department Bean -->
   <bean id="departmentBean" class="com.jcg.spring.constructor.injection.Department">
      <constructor-arg type="int" value="101" />
      <constructor-arg type="java.lang.String" value="Technical Writer Team" />
      <constructor-arg>
         <map>
            <entry key="Senior Manager" value="Sergio Guillen" />
            <entry key="Manager" value="Diego Garcia" />
            <entry key="Developer" value="Pepe Grillo" />
         </map>
      </constructor-arg>
   </bean>
</beans>